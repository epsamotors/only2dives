<div class="modal fade" id="loginModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
    aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-success textPurple" id="staticBackdropLabel">
                    <i class="fal fa-check-circle"> Login</i>
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form action="/signin" method="POST">
                    <div class="mb-1">
                        <input type="email" name="email" placeholder="CORREO" class="form-control" required autofocus>
                    </div>
                    <div class="mb-1">
                        <input type="password" name="password" placeholder="CONTRASEÃ‘A" class="form-control" required>
                    </div>
                    <div class="col-12 text-center">
