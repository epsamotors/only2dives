<div class="container p-4">
    <div class="row">

        <div class="col-xs-12 col-md-9 col-md-push-3">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="col-md-12">
                        <div class="row">

                            <table class="table caption-top">
                                <caption>Lista de Categoria</caption>
                                <thead class="text-center table-secondary">
                                    <tr class="card-title text-uppercase">
                                        <td>Nombre</td>
                                        <td>Actualizar</td>
                                        <td>Eliminar</td>
                                    </tr>
                                </thead>
                                <tbody class="text-center">
                                    {{#each category}}
                                    <tr>
                                        <td>{{CATEGORIA_NOMBRE}}</td>
                                        <td>
                                            {{!-- <a class="btn btn-outline-success" data-bs-toggle="modal"
                                                data-bs-target="#categoryModal">
                                                Actualizar
                                            </a> --}}
                                            <button type="button" class="btn btn-outline-success" data-bs-toggle="modal"
                                                data-bs-target="#myCategoryModal{{@index}}">
                                                Actualizar
                                            </button>
                                        </td>
                                        <td>
                                            <a href="/administrator/deleteCategory/{{CATEGORIA_ID}}"
                                                class="btn btn-outline-danger">Eliminar</a>
                                        </td>
                                    </tr>


                                    <div class="modal fade" id="myCategoryModal{{@index}}" data-bs-backdrop="static"
                                        data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel"
                                        aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title text-success" id="staticBackdropLabel">
                                                        <i class="fal fa-check-circle"> {{CATEGORIA_NOMBRE}}</i>
                                                    </h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                        aria-label="Close"></button>
                                                </div>

                                                <div class="modal-body">

                                                    <form action="/administrator/editCategory/{{CATEGORIA_ID}}"
                                                        method="POST">

                                                        <div class="col-md-12">
                                                            <label class="form-label">Nombre:</label>
                                                            <input type="text" value="{{CATEGORIA_NOMBRE}}"
                                                                name="CATEGORIA_NOMBRE" placeholder="NOMBRE"
                                                                class="form-control" maxlength="60"
                                                                style="text-transform:uppercase"
                                                                oninput="if(this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength);"
                                                                required autofocus>
                                                        </div>

                                                        <div class="col-12 text-center">
                                                            <button class="btn btn-success">
                                                                Guardar
                                                            </button>
                                                            <a href="/administrator/category"
                                                                class="btn btn-danger">Cancelar</a>
                                                        </div>

                                                    </form>

                                                </div>

                                            </div>
                                        </div>
                                    </div>


                                    {{/each}}
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>


        <div class="col-xs-12 col-md-3 col-md-pull-9">
            <div class="panel panel-default">
                <div class="card">
                    <div class="card-body text-secondary">
                        <div class="d-grid gap-3">
                            <a class="btn btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#categoryModal">
                                Agregar Categoria
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="modal fade" id="categoryModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
            aria-labelledby="staticBackdropLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title text-success" id="staticBackdropLabel">
                            <i class="fal fa-check-circle"> Agregar nueva categoria</i>
                        </h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form action="/administrator/addCategory/" class="row g-3 needs-validation" method="POST"
                            enctype="multipart/form-data">

                            <div class="col-md-12">
                                <label class="form-label">Nombre:</label>
                                <input type="text" name="CATEGORIA_NOMBRE" placeholder="NOMBRE" class="form-control"
                                    maxlength="60" style="text-transform:uppercase"
                                    oninput="if(this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength);"
                                    required autofocus>
                            </div>

                            <div class="col-12 text-center">
                                <button class="btn btn-success">
                                    Guardar
                                </button>
                                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cerrar</button>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>